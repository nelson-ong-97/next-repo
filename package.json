{
  "name": "next-turbo",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "db:push": "turbo -F @next-turbo/db db:push",
    "db:studio": "turbo -F @next-turbo/db db:studio",
    "db:generate": "turbo -F @next-turbo/db db:generate",
    "db:migrate": "turbo -F @next-turbo/db db:migrate",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md,mdx}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md,mdx}\""
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "turbo": "^2.5.4",
    "@types/node": "^22.13.11",
    "prettier": "^3.4.2"
  },
  "packageManager": "pnpm@10.11.1"
}
